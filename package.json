{
  "name": "openclaw-pm-dashboard",
  "version": "0.1.0",
  "description": "OpenClaw Multi-Agent Project Management Dashboard",
  "main": "backend/server.js",
  "scripts": {
    "dev:start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && cp .env.development .env && npm run dev",
    "dev:frontend": "cd frontend && npm run dev -- --port 3000 --host 0.0.0.0",
    "dev:backend-only": "cd backend && cp .env.development .env && npm run dev",
    "dev:frontend-only": "cd frontend && npm run dev -- --port 3000 --host 0.0.0.0",
    "prod:build": "npm run prod:build-frontend && npm run prod:build-backend",
    "prod:build-frontend": "cd frontend && npm run build",
    "prod:build-backend": "cd backend && cp .env.production .env",
    "prod:start": "npm run prod:build && concurrently \"npm run prod:start-backend\" \"npm run prod:serve-frontend\"",
    "prod:start-backend": "cd backend && npm start",
    "prod:serve-frontend": "cd frontend && npx serve -s build -l 4000 --host 0.0.0.0",
    "prod:stop": "pkill -f 'openclaw-pm-dashboard' || pkill -f 'serve.*4000' || pkill -f 'node.*server.js'",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ..",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules frontend/build",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "lint": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "commit": "git add . && git commit -m",
    "push": "git push origin master",
    "deploy:dev": "./scripts/deploy-development.sh",
    "deploy:prod": "./scripts/deploy-production.sh",
    "dev:stop": "pkill -f 'vite.*3000' || pkill -f 'nodemon.*3001' || true",
    "prod:stop": "pm2 stop all || pkill -f 'serve.*4000' || pkill -f 'node.*server.js.*4001' || true",
    "logs:dev": "tail -f logs/backend-dev.log logs/frontend-dev.log",
    "logs:prod": "tail -f logs/backend-prod.log logs/frontend-prod.log",
    "status": "ps aux | grep -E '(vite|nodemon|serve|node.*server)' | grep -v grep",
    "health": "curl -f http://localhost:3001/api/health && curl -f http://localhost:4001/api/health"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.1"
  },
  "keywords": [
    "openclaw",
    "multi-agent",
    "project-management",
    "dashboard",
    "real-time",
    "tailscale"
  ],
  "author": "OpenClaw Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/StiensWout/openclaw-pm-dashboard.git"
  }
}