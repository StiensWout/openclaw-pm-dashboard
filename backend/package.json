{
  "name": "openclaw-pm-dashboard-backend",
  "version": "0.1.0",
  "description": "Express API server for OpenClaw Multi-Agent Project Management Dashboard",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production PORT=4001 node dist/server.js",
    "dev": "NODE_ENV=development PORT=3001 ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "npm run build:prod && npm run start:prod",
    "test": "jest",
    "db:init": "ts-node src/database/init.ts",
    "db:migrate": "ts-node src/database/migrate.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy:preview": "npm run build:prod && pm2 restart openclaw-pm-backend || pm2 start dist/server.js --name openclaw-pm-backend",
    "stop:preview": "pm2 stop openclaw-pm-backend || true"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^2.4.2",
    "joi": "^17.11.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/sqlite3": "^3.1.11",
    "@types/joi": "^17.2.3",
    "@eslint/js": "^9.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "keywords": [
    "openclaw",
    "multi-agent",
    "project-management",
    "dashboard",
    "express",
    "socket.io",
    "typescript"
  ],
  "author": "OpenClaw",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}