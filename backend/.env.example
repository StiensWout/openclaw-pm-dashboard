# Server Configuration
NODE_ENV=development
PORT=3001
PROD_PORT=4001

# Tailscale Configuration
TAILSCALE_INTERFACE=hostingervps.barracuda-banfish.ts.net
BIND_HOST=0.0.0.0
TAILSCALE_ONLY=true

# Frontend URLs
FRONTEND_DEV_URL=http://localhost:3000
FRONTEND_PROD_URL=https://hostingervps.barracuda-banfish.ts.net:4000
CORS_ORIGIN=http://localhost:3000,https://hostingervps.barracuda-banfish.ts.net:4000

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,https://hostingervps.barracuda-banfish.ts.net:4000

# Database
DB_PATH=./data/openclaw-pm.db

# OpenClaw Integration
OPENCLAW_NOTIFICATIONS=true
OPENCLAW_WORKSPACE_PATH=/home/wout/.openclaw/workspace

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics