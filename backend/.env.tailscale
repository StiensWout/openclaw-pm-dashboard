# Production Tailscale Configuration
# Copy this to .env for Tailscale-only deployment

# Server Configuration
PORT=3001
NODE_ENV=production

# Tailscale Configuration - SECURITY CRITICAL
# Bind only to Tailscale interface to prevent public access
BIND_HOST=100.64.0.1
TAILSCALE_HOSTNAME=hostingervps.barracuda-banfish.ts.net

# CORS Configuration - Restricted to Tailscale network
CORS_ORIGIN=http://hostingervps.barracuda-banfish.ts.net:3000
SOCKET_IO_CORS_ORIGIN=http://hostingervps.barracuda-banfish.ts.net:3000

# OpenClaw Integration
OPENCLAW_API_URL=http://localhost:8080
OPENCLAW_NOTIFICATION_CHANNEL=wout-notifications

# Security Configuration
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Production Settings
LOG_LEVEL=info
DEBUG=openclaw:error